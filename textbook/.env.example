# Frontend Environment Variables
# Copy this file to .env and fill in your values

# API Base URL for backend services
# For local development: http://localhost:5000
# For production (Vercel): Leave empty or omit (same-origin /api routes)
REACT_APP_API_BASE_URL='http://localhost:5000'

# Algolia Search Configuration (optional)
# Get your credentials from: https://www.algolia.com
APPLICATION_ID='your-algolia-app-id'
SEARCH_API_KEY='your-algolia-search-api-key'

# Environment mode
NODE_ENV='development'

# Enable debug logging
DEBUG='false'

